CREATE TABLE PET_USER
(
	USER_NO INTEGER PRIMARY KEY,
	USER_ID VARCHAR(20) NOT NULL,
	USER_PWD VARCHAR(20) NOT NULL,
	USER_NICK VARCHAR(20) NOT NULL,
	USER_IMG VARCHAR(100) NOT NULL,
	USER_INTRO VARCHAR(400) NOT NULL,
	USER_REGDATE DATE,
	QUESTION VARCHAR(20) NOT NULL,
	ANSWER VARCHAR(100) NOT NULL
);

CREATE TABLE MY_PET
(
	PET_NO INTEGER PRIMARY KEY,
	USER_NO INTEGER ,
	PET_NAME VARCHAR(20) NOT NULL,
	PET_BIRTH DATE NOT NULL,
	PET_GENDER VARCHAR(10) NOT NULL,
	PET_INTRO VARCHAR(400) NOT NULL,
	PET_IMG VARCHAR(200) NOT NULL,
	CONSTRAINT USER_NO FOREIGN KEY(USER_NO) REFERENCES PET_USER (USER_NO)
);

CREATE TABLE PET_BOARD
(
	BOARD_NO INTEGER PRIMARY KEY,
	USER_NO INTEGER,
	PET_NO INTEGER,
	BOARD_CONTENTS VARCHAR(300) NOT NULL,
	BOARD_REGDATE DATE
);
ALTER TABLE PET_BOARD
ADD	CONSTRAINT FK_PET_NO FOREIGN KEY(PET_NO) REFERENCES MY_PET (PET_NO);
ALTER TABLE PET_BOARD
ADD CONSTRAINT FK_USER_NO FOREIGN KEY(USER_NO) REFERENCES PET_USER(USER_NO);

CREATE TABLE PET_REPLY(
	REPLY_NO INTEGER PRIMARY KEY,
	BOARD_NO INTEGER ,
	USER_NO INTEGER,
	REPLY_CONTENT VARCHAR(400),
	REPLY_REGDATE DATE
);
ALTER TABLE PET_REPLY
ADD CONSTRAINT FK_PET_REPLY FOREIGN KEY(BOARD_NO) REFERENCES PET_BOARD(BOARD_NO);
ALTER TABLE PET_REPLY
ADD CONSTRAINT FKK_USER_NO FOREIGN KEY(USER_NO) REFERENCES PET_USER(USER_NO);

CREATE TABLE PET_LIKE(
	BOARD_NO INTEGER ,
	USER_NO INTEGER
);
ALTER TABLE PET_LIKE
ADD CONSTRAINT BOARD_NO FOREIGN KEY(BOARD_NO) REFERENCES PET_BOARD(BOARD_NO);
ALTER TABLE PET_LIKE
ADD CONSTRAINT K_USER_NO FOREIGN KEY(USER_NO) REFERENCES PET_USER(USER_NO);



CREATE TABLE BOARD_PETLIST(
    ID INTEGER PRIMARY KEY ,
    BOARD_NO INTEGER,
    PET_NO INTEGER
);
ALTER TABLE BOARD_PETLIST
    ADD CONSTRAINT FK_BOARD_NO FOREIGN KEY(BOARD_NO) REFERENCES PET_BOARD(BOARD_NO);



CREATE SEQUENCE user_seq
INCREMENT BY 1
START WITH 1
MAXVALUE 9999;

CREATE SEQUENCE board_seq
    INCREMENT BY 1
    START WITH 1
    MAXVALUE 9999;


 CREATE SEQUENCE pet_seq
     INCREMENT BY 1
     START WITH 1
     MAXVALUE 9999;

CREATE SEQUENCE boardPetList_seq
    INCREMENT BY 1
    START WITH 1
    MAXVALUE 9999;
